{
  "name": "@hype/monorepo",
  "private": true,
  "packageManager": "yarn@3.6.4",
  "workspaces": [
    "packages/*",
    "packages/integrations/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "concurrently \"yarn workspace @hype/backend dev\" \"yarn workspace @hype/web dev\"",
    "dev:backend": "yarn workspace @hype/backend dev",
    "dev:web": "yarn workspace @hype/web dev",
    "build": "yarn workspaces foreach -pt run build",
    "clean": "yarn workspaces foreach -p run clean && rm -rf node_modules",
    "lint": "yarn workspaces foreach -p run lint",
    "format": "yarn workspaces foreach -p run format",
    "test": "yarn workspaces foreach -p run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3"
  }
}
