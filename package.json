{
  "name": "@hype/app",
  "private": true,
  "packageManager": "yarn@3.6.4",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only ./src/web/server.ts",
    "build": "tsup --config build.ts",
    "start": "node ./dist/web/server.js",
    "lint": "eslint",
    "format": "yarn dlx prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/node": "^18.11.18",
    "@types/express": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "~9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@pythnetwork/hermes-client": "^2.0.0",
    "@pythnetwork/price-service-sdk": "^1.8.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "zod": "^3.21.4"
  }
}
